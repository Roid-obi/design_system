# Matches prettier presets
root = true

[*]
charset = utf8
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 80
trim_trailing_whitespace = true
end_of_line = lf


# if you're writing selectors this long,
# your editor should at least make you feel bad about it
[*.css]
max_line_length = 60
